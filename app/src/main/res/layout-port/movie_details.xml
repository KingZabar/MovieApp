<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Include ToolBar here -->
    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/movie_details_image_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/movie_poster"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/movie_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/movie_details_image_poster"
                android:text="@string/title"
                android:textSize="@dimen/textview_title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_details_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/movie_details_title"
                android:layout_alignStart="@+id/movie_details_title"
                android:layout_below="@+id/movie_details_title"
                android:text="@string/release_date" />


            <RatingBar
                android:id="@+id/movie_details_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/movie_details_release_date"
                android:layout_alignStart="@+id/movie_details_release_date"
                android:layout_below="@+id/movie_details_release_date"
                android:numStars="10"
                android:stepSize="0.1" />


            <TextView
                android:id="@+id/movie_details_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/movie_details_ratingBar"
                android:layout_marginLeft="@dimen/view_left_margin"
                android:layout_marginStart="@dimen/view_left_margin"
                android:layout_toEndOf="@+id/movie_details_ratingBar"
                android:layout_toRightOf="@+id/movie_details_ratingBar"
                android:text="@string/rating" />

            <TextView
                android:id="@+id/movie_details_plot_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/movie_details_ratingBar"
                android:layout_alignStart="@+id/movie_details_ratingBar"
                android:layout_below="@+id/movie_details_ratingBar"
                android:text="@string/synopsis" />


        </RelativeLayout>


    </ScrollView>


</LinearLayout>
